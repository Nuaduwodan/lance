{
  "name": "lance",
  "displayName": "Lance",
  "description": "Language Application for NC",
  "version": "0.0.1",
  "publisher": "Yanik Bigler",
  "icon": "images/lance_icon_128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Nuaduwodan/lance"
	},
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sinumeriknc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sinumeriknc",
        "configuration": "./language-configuration.json",
        "extensions": [
          ".spf", ".mpf", ".def", ".tpl"
        ]
      }
    ],
    "grammars": [
      {
        "language": "sinumeriknc",
        "scopeName": "source.sinumeriknc",
        "path": "./syntaxes/sinumeriknc.tmLanguage.json"
      }
    ],
    "configuration":[
        {
            "title": "lance",
            "properties": {
                "lanceServer.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "lanceServer.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VSCode and the lanceServer service."
                }
            }
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver-protocol": "^3.17.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.2.0"
  }
}
