{
  "name": "lance",
  "displayName": "Lance",
  "description": "Language Application for NC",
  "version": "0.0.2",
  "publisher": "YanikBigler",
  "icon": "images/lance_icon_128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Nuaduwodan/lance"
	},
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sinumeriknc",
        "configuration": "./language-configuration.json",
        "extensions": [
          ".spf", ".mpf", ".def"
        ]
      }
    ],
    "grammars": [
      {
        "language": "sinumeriknc",
        "scopeName": "source.sinumeriknc",
        "path": "./syntaxes/sinumeriknc.tmLanguage.json"
      }
    ],
    "configuration":[
        {
            "title": "Lance",
            "properties": {
              "lance.maxNumberOfProblems": {
                "type": "number",
                "default": 100,
                "description": "Controls the maximum number of problems produced by the server.",
                "order": 1
              },
              "lance.trace": {
                "type": "boolean",
                "default": "false",
                "description": "Traces the communication between VSCode and the Lance server.",
                "order": 2
              },
              "lance.customization.globalSymbol.fileEndings":{
                "type": "array",
                "default": [".def"],
                "description": "Specifies the file endings, with the leading dot, of files, of which containing symbols should be interpreted as global symbols.",
                "order": 3
              },
              "lance.customization.globalSymbol.folderNames":{
                "type": "array",
                "default": ["cma.dir"],
                "description": "Specifies the folder names, which containing files should be interpreted as global procedures.",
                "order": 4
              },
              "lance.customization.placeholderPreprocessor.fileEndings":{
                "type": "array",
                "default": [],
                "description": "TODO",
                "order": 5
              },
              "lance.customization.placeholderPreprocessor.keyType":{
                "type": "string",
                "default": "RegEx",
                "enum": [
                  "RegEx",
                  "String"
                ],
                "description": "TODO",
                "order": 6
              },
              "lance.customization.placeholderPreprocessor.placeholders":{
                "type": "array",
                "default": [],
                "description": "TODO",
                "order": 7
              }
            }
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver-protocol": "^3.17.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.2.0"
  }
}
